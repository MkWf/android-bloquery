<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_item_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/queston_item_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_item_question"/>

    <ImageView
        android:id="@+id/question_item_interest_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_item_question"
        android:layout_toRightOf="@id/queston_item_answers"
        android:contentDescription="@string/question_rating"
        android:src="@mipmap/question_item_interest_indicator"/>

    <ImageButton
        android:id="@+id/question_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/user_default"
        android:layout_alignParentRight="true"
        android:layout_below="@id/question_item_question"
        android:contentDescription="@string/question_user" />

</RelativeLayout>