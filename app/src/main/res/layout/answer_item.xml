<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/answer_item_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_blue_grey_950"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:id="@+id/answer_item_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/answer_item_answer"
        android:src="@mipmap/user_default"
        android:background="@color/transparent"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/user_icon"/>

    <TextView
        android:id="@+id/answer_item_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/answer_item_user"
        android:layout_alignBottom="@id/answer_item_user"/>

    <ImageButton
        android:id="@+id/answer_item_upvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_item_answer"
        android:contentDescription="@string/upvote"
        android:background="@color/transparent"
        android:layout_alignBottom="@id/answer_item_user"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/answer_item_upvote"/>

    <View
        android:id="@+id/point_item_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/answer_item_upvote"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"/>


</RelativeLayout>