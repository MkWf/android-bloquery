<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/fragment_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/fragment_profile_username"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/fragment_profile_upload_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_profile_image"
        android:layout_centerHorizontal="true"
        android:text="Upload profile image"/>

    <TextView
        android:id="@+id/fragment_profile_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/fragment_profile_upload_image"/>

    <EditText
        android:id="@+id/fragment_profile_edit_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/fragment_profile_upload_image"
        android:visibility="gone"/>

    <Button
        android:id="@+id/fragment_profile_description_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Edit description"/>

</RelativeLayout>